<div class="pages-banner d-flex justify-content-center" >
  <div class="pages-banner-content">
    <div class="pages-white-box">
    </div>
  </div>
</div>
<div class="container devise">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-10 pt-3">
      <h2>Forgot your password?</h2>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs pt-3">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>
        <div class="form-actions pt-3">
          <%= f.button :submit, "Send me reset password instructions" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
