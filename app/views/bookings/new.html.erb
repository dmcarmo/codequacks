<div class="container">
  <div class="row">
    <div class="col">
      <div class="d-flex justify-content-center">
        <div class="container-title shadow bg-white rounded">Book <%= @duck.name %> now</div>
      </div>
      <div id="duck-booking-dates" data-unavailable="<%= @duck.unavailable_dates.to_json %>"></div>
      <%= simple_form_for [@duck, @booking] do |f| %>
        <%= f.input :start_time, as: :string, label: "Pick a date", required: false, input_html: {class: "range_start d-none"} %>
        <%= f.input :end_time, as: :string, label: false, required: false, input_html: {class: "range_end d-none"} %>
        <p>Cost: <span id="duck-price-per-day"><%= @duck.price %></span> €/day</p>
        <p>Book for <span id="total-days">0</span> days</p>
        <p>Total price: <span id="total-price">0</span> €</p>
        <%= f.submit class: 'btn btn-primary mt-3' %>
      <% end %>
