<div class="container mt-3">
<br>
  <div class="row">
    <% @ducks.each do |duck| %>
      <%= render "ducks/show", duck: duck %>
      <div class="col-md-4 d-flex">
        <div class="card card-body card-modal" id="<%= duck.id %>">
          <div class="d-flex flex-column h-100 justify-content-between">
            <h5 class="card-title"><strong><%= duck.name %></strong></h5>
            <p><%= cl_image_tag duck.photo.key, class:"card-text", height: 300, width: 250, crop: :fill %></p>
            <p class="card-text"><strong>Price per day:</strong> <%= duck.price.to_int %>â‚¬</p>
            <%= link_to "Book this Duck", new_duck_booking_path(duck), class: "booking btn btn-primary w-40 align-self-center" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
