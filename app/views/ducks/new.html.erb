<div class="pages-banner d-flex justify-content-center" >
  <div class="pages-banner-content">
    <div class="pages-white-box">
    </div>
  </div>
</div>
<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="d-flex flex-column align-items-center col">
     
        <div class="container-title shadow bg-white rounded">Create Your Own Duck</div>
    
      <div class="w-50">
        <%= bootstrap_form_for @duck do |f| %>
          <%= f.text_field :name %>
          <%= f.text_area :description %>
          <%= f.number_field :price %>
          <%= f.file_field :photo %>
          <%= f.submit class: 'btn btn-primary mt-3' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
