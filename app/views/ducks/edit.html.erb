<div class="pages-banner d-flex justify-content-center" >
  <div class="pages-banner-content">
    <div class="pages-white-box">
    </div>
  </div>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <div class="d-flex justify-content-center">
        <div class="container-title shadow bg-white rounded">Edit Your Duck</div>
      </div>
      <div>
        <%= simple_form_for @duck do |f| %>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :price %>
          <%= f.input :photo, as: :file %>
          <%-#<%= f.input :category, collection: Restaurant::CATEGORIES %>
          <br>
          <br>
          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
